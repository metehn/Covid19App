<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ChangePasswordFragment"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:src="@drawable/paper_plane"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/tv_changePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click send button to send reset password email"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:layout_margin="5dp"/>



        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="30dp">

           <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_changePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_rounded_darkgreen"
                android:textColor="@color/white"
                android:text="Send"/>

            <ProgressBar
                android:layout_gravity="center_horizontal"
                android:id="@+id/pb_changePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </FrameLayout>



    </LinearLayout>




</LinearLayout>