<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/AppGreen">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/AppGreen"
        tools:context=".SignUp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/signUpImageViewPatient"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:srcCompat="@drawable/ic_upload_image"
            app:strokeColor="@color/AppGreen"
            app:strokeWidth="1dp" />

        <EditText
            android:id="@+id/signUpNamePatient"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/custom_edittext"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="@+id/signUpImageViewPatient"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/signUpImageViewPatient"
            app:layout_constraintTop_toBottomOf="@+id/signUpImageViewPatient" />

        <EditText
            android:id="@+id/signUpPasswordPatient"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/custom_edittext"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="@+id/signUpEmailPatient"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="@+id/signUpEmailPatient"
            app:layout_constraintTop_toBottomOf="@+id/signUpEmailPatient" />

        <EditText
            android:id="@+id/signUpEmailPatient"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/custom_edittext"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            app:layout_constraintEnd_toEndOf="@+id/signUpSurnamePatient"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="@+id/signUpSurnamePatient"
            app:layout_constraintTop_toBottomOf="@+id/signUpSurnamePatient" />

        <CheckBox
            android:id="@+id/signUpCheckBoxPatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="CheckBox"
            app:layout_constraintEnd_toEndOf="@+id/signUpSpinnerPatient"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="@+id/signUpSpinnerPatient"
            app:layout_constraintTop_toBottomOf="@+id/signUpSpinnerPatient" />

        <Button
            android:id="@+id/signUpButtonPatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/custom_button"
            android:text="Next"
            android:textColor="@color/AppGray"
            app:layout_constraintEnd_toEndOf="@+id/signUpCheckBoxPatient"
            app:layout_constraintStart_toStartOf="@+id/signUpCheckBoxPatient"
            app:layout_constraintTop_toBottomOf="@+id/signUpCheckBoxPatient" />

        <Spinner

            android:id="@+id/signUpSpinnerPatient"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="@+id/signUpPasswordPatient"
            app:layout_constraintStart_toStartOf="@+id/signUpPasswordPatient"
            app:layout_constraintTop_toBottomOf="@+id/signUpPasswordPatient" />

        <EditText
            android:id="@+id/signUpSurnamePatient"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/custom_edittext"
            android:ems="10"
            android:hint="Surname"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/signUpNamePatient"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/signUpNamePatient"
            app:layout_constraintTop_toBottomOf="@+id/signUpNamePatient" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>